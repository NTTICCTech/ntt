{
  "name": "ntt",
  "version": "1.0.0",
  "description": "Numbered Ticket Terminal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sforzando/ntt.git"
  },
  "main": "main.js",
  "keywords": [
    "electron"
  ],
  "author": "sforzando LLC.",
  "license": "MIT",
  "build": {
    "productName": "Numbered Ticket Terminal",
    "appId": "jp.co.sforzando.ntt",
    "mac": {
      "icon": "build/icons/ntt.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "build/icons/ntt.ico",
      "target": "nsis"
    },
    "directories": {
      "output": "build"
    }
  },
  "dependencies": {
    "node-static": "^0.7.10",
    "electron-log": "^2.2.14"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.14.7",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "prettier-eslint-cli": "^4.7.1"
  },
  "scripts": {
    "clean": "echo \"Error: no clean command specified\" && exit 1",
    "build": "npm run build:mac",
    "build:mac": "electron-builder --mac --x64",
    "build:lecture": "electron-builder --mac --x64 -c.mac.icon=build/icons/ntt-lecture.icns",
    "build:win": "electron-builder --win --x64",
    "format": "prettier-eslint \"src/**/*.js\"",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
